<%- include("./header.ejs") %> 
<body>
    <div class="container mt-5">
        <h5 style="color: white;
                    text-align: center;
                    background-color:#704878;
                    padding:3px;
                    box-shadow: 1px 1px 5px black;
                    width: 400px;
                    margin: auto;
                    padding-bottom: 10px;"
                >Admin Login</h5>
        <div id="main" style="margin-top: 0px !important;">
            <form action="/login" method="post">
                <label >User ID</label>
                <input type="text" name="userId" class="form-control">
                <label >Password</label>
                <input type="password" name="password" class="form-control">
                    <button class="btn btn-secondary mt-2" type="submit">LogIn</button>
                    <h5 id="error" style="text-align: center;color:red">Wrong Credentials</h5>
            </form>
        </div>
    </div>
</body>
<script>
    document.getElementById("error").style.display = '<%=error%>'
</script>
</html>